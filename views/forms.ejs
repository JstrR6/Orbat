<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>US Military Forms</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        .custom-scrollbar::-webkit-scrollbar {
            width: 8px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: #1f2937;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #4b5563;
            border-radius: 4px;
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 p-4">
            <h1 class="text-2xl font-bold mb-6 text-center">US Military Dashboard</h1>
            <nav>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="layout-dashboard" class="mr-2 h-4 w-4"></i>
                    Dashboard
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="users" class="mr-2 h-4 w-4"></i>
                    ORBAT
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700 bg-gray-700">
                    <i data-lucide="file-text" class="mr-2 h-4 w-4"></i>
                    Forms
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="user" class="mr-2 h-4 w-4"></i>
                    Profile
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="settings" class="mr-2 h-4 w-4"></i>
                    Settings
                </button>
            </nav>
        </div>

        <!-- Main content -->
        <div class="flex-1 p-8 custom-scrollbar overflow-y-auto">
            <h2 class="text-3xl font-bold mb-6">Forms</h2>
            
            <!-- Forms Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Training Form -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/training" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="graduation-cap" class="h-8 w-8 mr-3 text-blue-500"></i>
                            <h3 class="text-xl font-semibold">Training Form</h3>
                        </div>
                        <p class="text-gray-400">Request basic training or specialized courses</p>
                    </a>
                </div>

                <!-- Officer Training Form -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/officer-training" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="award" class="h-8 w-8 mr-3 text-gold-500"></i>
                            <h3 class="text-xl font-semibold">Officer Training Form</h3>
                        </div>
                        <p class="text-gray-400">Apply for officer training program</p>
                    </a>
                </div>

                <!-- Promotion Form -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/promotion" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="arrow-up-circle" class="h-8 w-8 mr-3 text-green-500"></i>
                            <h3 class="text-xl font-semibold">Promotion Form</h3>
                        </div>
                        <p class="text-gray-400">Request promotion to next enlisted rank</p>
                    </a>
                </div>

                <!-- Officer Promotion Form -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/officer-promotion" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="star" class="h-8 w-8 mr-3 text-yellow-500"></i>
                            <h3 class="text-xl font-semibold">Officer Promotion Form</h3>
                        </div>
                        <p class="text-gray-400">Request promotion to next officer rank</p>
                    </a>
                </div>

                <!-- Unit Assignment -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/unit-assignment" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="users" class="h-8 w-8 mr-3 text-purple-500"></i>
                            <h3 class="text-xl font-semibold">Unit Assignment</h3>
                        </div>
                        <p class="text-gray-400">Request transfer to different unit</p>
                    </a>
                </div>

                <!-- Discharge Request -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg hover:bg-gray-750 transition-colors">
                    <a href="/forms/discharge" class="block p-6">
                        <div class="flex items-center mb-4">
                            <i data-lucide="log-out" class="h-8 w-8 mr-3 text-red-500"></i>
                            <h3 class="text-xl font-semibold">Discharge Request</h3>
                        </div>
                        <p class="text-gray-400">Request military discharge</p>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();

// Handle navigation
document.querySelectorAll('nav button').forEach(button => {
    button.addEventListener('click', () => {
        const page = button.textContent.trim().toLowerCase();
        switch(page) {
            case 'dashboard':
                window.location.href = '/';
                break;
            case 'forms':
                window.location.href = '/forms';
                break;
            case 'orbat':
                window.location.href = '/orbat';
                break;
            case 'profile':
                window.location.href = '/profile';
                break;
            case 'settings':
                window.location.href = '/settings';
                break;
        }
    });
});
    </script>
</body>
</html>
