<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@1.9.4"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leader-line/1.0.7/leader-line.min.js"></script>
    <style>
        .hot-bar {
            transition: background-color 0.3s ease;
        }
        .hot-bar:hover {
            background-color: rgba(107, 114, 128, 0.3);
        }
        .unit-box {
            border: 2px solid #4a5568;
            border-radius: 8px;
            padding: 10px;
            margin: 10px;
            background-color: #ffffff;
        }
        .orbat-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .level {
            display: flex;
            justify-content: center;
            width: 100%;
        }
        .sub-units {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Hot Bar -->
    <div class="fixed top-0 left-0 right-0 z-50">
        <div class="hot-bar flex justify-center items-center h-16 px-4">
            <div class="flex space-x-4">
                <a href="/rank-structure" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Rank Structure
                </a>
                <a href="/orbat" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    ORBAT
                </a>
                <a href="/forms" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Forms
                </a>
                <a href="/orders" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Orders By The General
                </a>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 pt-20">
        <h1 class="text-3xl font-bold mb-6 text-center">ORBAT Viewer</h1>
        
        <div class="orbat-container">
            <% function renderUnit(unit, level = 0) { %>
                <div class="unit-box" id="<%= unit.id %>">
                    <h2 class="text-lg font-semibold"><%= unit.name %></h2>
                    <p class="text-sm"><%= unit.type %></p>
                    <p class="text-xs">Commander: <%= leadership[unit.id]?.commander || 'Not assigned' %></p>
                    <button onclick="showLeadershipForm('<%= unit.id %>')" class="text-xs text-blue-500 hover:text-blue-700">Update Leadership</button>
                </div>
                <% if (unit.subordinates && unit.subordinates.length > 0) { %>
                    <div class="sub-units">
                        <% unit.subordinates.forEach(subUnit => { %>
                            <% renderUnit(subUnit, level + 1) %>
                        <% }); %>
                    </div>
                <% } %>
            <% } %>

            <% renderUnit(structure) %>
        </div>

        <!-- Leadership Update Form (Hidden by default) -->
        <div id="leadershipForm" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="display: none;">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3 text-center">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Update Leadership</h3>
                    <form id="updateLeadershipForm" hx-post="/api/update-leadership" hx-swap="none" class="mt-2">
                        <input type="hidden" id="formUnitId" name="unitId" value="">
                        <select name="position" class="mt-2 p-2 w-full border rounded">
                            <option value="commander">Commander</option>
                            <option value="deputyCommander">Deputy Commander</option>
                            <option value="seniorEnlistedLeader">Senior Enlisted Leader</option>
                        </select>
                        <input type="text" name="name" placeholder="New leader name" class="mt-2 p-2 w-full border rounded">
                        <button type="submit" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Update
                        </button>
                    </form>
                    <button onclick="hideLeadershipForm()" class="mt-4 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showLeadershipForm(unitId) {
            document.getElementById('formUnitId').value = unitId;
            document.getElementById('leadershipForm').style.display = 'block';
        }

        function hideLeadershipForm() {
            document.getElementById('leadershipForm').style.display = 'none';
        }

        document.body.addEventListener('htmx:afterRequest', function(event) {
            if (event.detail.successful) {
                alert('Leadership updated successfully');
                hideLeadershipForm();
                location.reload(); // Reload the page to reflect changes
            } else {
                alert('Failed to update leadership');
            }
        });

        // Draw curved lines connecting units
        window.onload = function() {
            const units = document.querySelectorAll('.unit-box');
            units.forEach(unit => {
                const parentId = unit.id;
                const children = unit.nextElementSibling ? unit.nextElementSibling.children : [];
                Array.from(children).forEach(child => {
                    new LeaderLine(
                        document.getElementById(parentId),
                        document.getElementById(child.id),
                        {
                            color: 'rgba(0, 0, 0, 0.3)',
                            size: 2,
                            path: 'fluid',
                            startSocketGravity: [0, 50],
                            endSocketGravity: [0, -50]
                        }
                    );
                });
            });
        };
    </script>
</body>
</html>