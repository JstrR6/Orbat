<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ORBAT Viewer</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leader-line/1.0.7/leader-line.min.js"></script>
    <style>
        .unit-box {
            border: 2px solid #4a5568;
            border-radius: 10px;
            padding: 10px;
            margin: 10px;
            background-color: #f9fafb;
            text-align: center;
            width: 150px;
        }
        .orbat-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .level {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .level .unit-box {
            margin: 0 20px;
        }
    </style>
</head>
<body>
    <div class="orbat-container">
        <!-- 1st Army -->
        <div class="unit-box" id="army">1st Army</div>

        <!-- Corps Level -->
        <div class="level" id="corps-level">
            <div class="unit-box" id="corps1">11th Infantry Corps</div>
            <div class="unit-box" id="corps2">12th Airborne Corps</div>
            <div class="unit-box" id="corps3">13th Armored Corps</div>
        </div>

        <!-- Division Level under Corps 1 -->
        <div class="level" id="division-level-corps1">
            <div class="unit-box" id="division1-1">101st Infantry Division</div>
            <div class="unit-box" id="division1-2">102nd Armored Division</div>
            <div class="unit-box" id="division1-3">103rd Artillery Division</div>
        </div>

        <!-- Division Level under Corps 2 -->
        <div class="level" id="division-level-corps2">
            <div class="unit-box" id="division2-1">201st Airborne Division</div>
            <div class="unit-box" id="division2-2">202nd Air Assault Division</div>
            <div class="unit-box" id="division2-3">203rd Aviation Division</div>
        </div>

        <!-- Division Level under Corps 3 -->
        <div class="level" id="division-level-corps3">
            <div class="unit-box" id="division3-1">301st Armored Division</div>
            <div class="unit-box" id="division3-2">302nd Mechanized Division</div>
            <div class="unit-box" id="division3-3">303rd Artillery Division</div>
        </div>

        <!-- Squadron Level under Division 1-1 -->
        <div class="level" id="squadron-level-division1-1">
            <div class="unit-box" id="squadron1-1-1">111th Infantry Squadron</div>
            <div class="unit-box" id="squadron1-1-2">112th Infantry Squadron</div>
            <div class="unit-box" id="squadron1-1-3">113th Support Squadron</div>
        </div>
    </div>

    <script>
        window.onload = function() {
            // Connect Army to Corps
            new LeaderLine(document.getElementById('army'), document.getElementById('corps1'));
            new LeaderLine(document.getElementById('army'), document.getElementById('corps2'));
            new LeaderLine(document.getElementById('army'), document.getElementById('corps3'));

            // Connect Corps1 to Divisions
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-1'));
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-2'));
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-3'));

            // Connect Corps2 to Divisions
            new LeaderLine(document.getElementById('corps2'), document.getElementById('division2-1'));
            new LeaderLine(document.getElementById('corps2'), document.getElementById('division2-2'));
            new LeaderLine(document.getElementById('corps2'), document.getElementById('division2-3'));

            // Connect Corps3 to Divisions
            new LeaderLine(document.getElementById('corps3'), document.getElementById('division3-1'));
            new LeaderLine(document.getElementById('corps3'), document.getElementById('division3-2'));
            new LeaderLine(document.getElementById('corps3'), document.getElementById('division3-3'));

            // Connect Division 1-1 to Squadrons
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-1'));
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-2'));
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-3'));
        };
    </script>
</body>
</html>
