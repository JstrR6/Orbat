<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ORBAT Viewer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leader-line/1.0.7/leader-line.min.js"></script>
    <style>
        .hot-bar {
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }
        .hot-bar:hover {
            background-color: rgba(107, 114, 128, 0.3);
        }
        .unit-box {
            border: 2px solid #4a5568;
            border-radius: 10px;
            padding: 10px;
            margin: 10px;
            background-color: #f9fafb;
            text-align: center;
            width: 150px;
        }
        .orbat-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .level {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .level .unit-box {
            margin: 0 20px;
        }
    </style>
</head>
<body class="bg-gray-100">

    <!-- Hot Bar -->
    <div class="fixed top-0 left-0 right-0 z-50 bg-white bg-opacity-80 shadow-md">
        <div class="hot-bar flex justify-center items-center h-16 px-4">
            <div class="flex space-x-4">
                <a href="/rank-structure" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Rank Structure
                </a>
                <a href="/orbat" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    ORBAT
                </a>
                <a href="/forms" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Forms
                </a>
                <a href="/orders" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Orders By The General
                </a>
            </div>
        </div>
    </div>

    <div class="orbat-container pt-24">
        <!-- 1st Army -->
        <div class="unit-box" id="army">
            <h2>1st Army</h2>
            <button onclick="showLeadershipForm('army')">Update Leadership</button>
        </div>

        <!-- Corps Level -->
        <div class="level" id="corps-level">
            <div class="unit-box" id="corps1">
                <h2>11th Infantry Corps</h2>
                <button onclick="showLeadershipForm('corps1')">Update Leadership</button>
            </div>
            <div class="unit-box" id="corps2">
                <h2>12th Airborne Corps</h2>
                <button onclick="showLeadershipForm('corps2')">Update Leadership</button>
            </div>
            <div class="unit-box" id="corps3">
                <h2>13th Armored Corps</h2>
                <button onclick="showLeadershipForm('corps3')">Update Leadership</button>
            </div>
        </div>

        <!-- Division Level for Corps 1 -->
        <div class="level" id="division-level-corps1">
            <div class="unit-box" id="division1-1">
                <h2>101st Infantry Division</h2>
                <button onclick="showLeadershipForm('division1-1')">Update Leadership</button>
            </div>
            <div class="unit-box" id="division1-2">
                <h2>102nd Armored Division</h2>
                <button onclick="showLeadershipForm('division1-2')">Update Leadership</button>
            </div>
            <div class="unit-box" id="division1-3">
                <h2>103rd Artillery Division</h2>
                <button onclick="showLeadershipForm('division1-3')">Update Leadership</button>
            </div>
        </div>

        <!-- Squadron Level for Division 1-1 -->
        <div class="level" id="squadron-level-division1-1">
            <div class="unit-box" id="squadron1-1-1">
                <h2>111th Infantry Squadron</h2>
                <button onclick="showLeadershipForm('squadron1-1-1')">Update Leadership</button>
            </div>
            <div class="unit-box" id="squadron1-1-2">
                <h2>112th Infantry Squadron</h2>
                <button onclick="showLeadershipForm('squadron1-1-2')">Update Leadership</button>
            </div>
            <div class="unit-box" id="squadron1-1-3">
                <h2>113th Support Squadron</h2>
                <button onclick="showLeadershipForm('squadron1-1-3')">Update Leadership</button>
            </div>
        </div>
    </div>

    <!-- Leadership Update Form (Hidden by default) -->
    <div id="leadershipForm" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full flex justify-center items-center" style="display: none;">
        <div class="relative p-6 border w-96 shadow-lg rounded-md bg-white">
            <h3 class="text-lg leading-6 font-medium text-gray-900 text-center">Update Leadership</h3>
            <form id="updateLeadershipForm" hx-post="/api/update-leadership" hx-swap="none" class="mt-4">
                <input type="hidden" id="formUnitId" name="unitId" value="">
                <select name="position" class="mt-2 p-2 w-full border border-gray-300 rounded">
                    <option value="commander">Commander</option>
                    <option value="deputyCommander">Deputy Commander</option>
                    <option value="seniorEnlistedLeader">Senior Enlisted Leader</option>
                </select>
                <input type="text" name="name" placeholder="New leader name" class="mt-2 p-2 w-full border border-gray-300 rounded">
                <button type="submit" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded w-full">
                    Update
                </button>
            </form>
            <button onclick="hideLeadershipForm()" class="mt-4 bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded w-full">
                Close
            </button>
        </div>
    </div>

    <script>
        function showLeadershipForm(unitId) {
            document.getElementById('formUnitId').value = unitId;
            document.getElementById('leadershipForm').style.display = 'flex';
        }

        function hideLeadershipForm() {
            document.getElementById('leadershipForm').style.display = 'none';
        }

        // Draw curved lines connecting units
        window.onload = function() {
            // Connect Army to Corps
            new LeaderLine(document.getElementById('army'), document.getElementById('corps1'));
            new LeaderLine(document.getElementById('army'), document.getElementById('corps2'));
            new LeaderLine(document.getElementById('army'), document.getElementById('corps3'));

            // Connect Corps1 to Divisions
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-1'));
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-2'));
            new LeaderLine(document.getElementById('corps1'), document.getElementById('division1-3'));

            // Connect Division 1-1 to Squadrons
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-1'));
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-2'));
            new LeaderLine(document.getElementById('division1-1'), document.getElementById('squadron1-1-3'));
        };
    </script>
</body>
</html>
