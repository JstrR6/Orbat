<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ORBAT Viewer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .hot-bar {
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }
        .hot-bar:hover {
            background-color: rgba(107, 114, 128, 0.3);
        }
        .unit-box {
            border: 2px solid #4a5568;
            border-radius: 10px;
            padding: 20px;
            margin: 20px;
            background-color: #f9fafb;
            text-align: center;
        }
        .orbat-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .level {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .level .unit-box {
            margin: 0 20px;
            width: 250px;
        }
        .expanded-content {
            display: none;
            margin-top: 20px;
        }
        .unit-box-expanded {
            display: block;
        }
    </style>
</head>
<body class="bg-gray-100">

    <!-- Hot Bar -->
    <div class="fixed top-0 left-0 right-0 z-50 bg-white bg-opacity-80 shadow-md">
        <div class="hot-bar flex justify-center items-center h-16 px-4">
            <div class="flex space-x-4">
                <a href="/rank-structure" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Rank Structure
                </a>
                <a href="/orbat" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    ORBAT
                </a>
                <a href="/forms" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Forms
                </a>
                <a href="/orders" class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">
                    Orders By The General
                </a>
            </div>
        </div>
    </div>

    <div class="orbat-container pt-24">
        <!-- 1st Army -->
        <div class="unit-box" id="army">
            <h2 class="text-xl font-bold">1st Army</h2>
        </div>

        <!-- Corps Level -->
        <div class="level" id="corps-level">
            <div class="unit-box" id="corps1">
                <h2 class="text-lg font-bold">11th Infantry Corps</h2>
                <button onclick="toggleExpand('corps1-expand')">Expand</button>
            </div>
            <div class="unit-box" id="corps2">
                <h2 class="text-lg font-bold">12th Airborne Corps</h2>
                <button onclick="toggleExpand('corps2-expand')">Expand</button>
            </div>
            <div class="unit-box" id="corps3">
                <h2 class="text-lg font-bold">13th Armored Corps</h2>
                <button onclick="toggleExpand('corps3-expand')">Expand</button>
            </div>
        </div>

        <!-- Expanded Content for Corps 1 -->
        <div class="expanded-content" id="corps1-expand">
            <div class="level">
                <div class="unit-box">
                    <h2 class="text-md font-semibold">101st Infantry Division</h2>
                    <button onclick="toggleExpand('division1-1-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division1-1-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">111th Infantry Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">112th Infantry Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">113th Support Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">102nd Armored Division</h2>
                    <button onclick="toggleExpand('division1-2-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division1-2-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">121st Armored Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">122nd Armored Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">103rd Artillery Division</h2>
                    <button onclick="toggleExpand('division1-3-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division1-3-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">131st Artillery Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">132nd Rocket Artillery Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expanded Content for Corps 2 -->
        <div class="expanded-content" id="corps2-expand">
            <div class="level">
                <div class="unit-box">
                    <h2 class="text-md font-semibold">201st Airborne Division</h2>
                    <button onclick="toggleExpand('division2-1-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division2-1-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">211th Airborne Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">212th Recon Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">202nd Air Assault Division</h2>
                    <button onclick="toggleExpand('division2-2-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division2-2-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">221st Helicopter Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">222nd Air Assault Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">203rd Aviation Division</h2>
                    <button onclick="toggleExpand('division2-3-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division2-3-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">231st UAV Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">232nd Fixed-Wing Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expanded Content for Corps 3 -->
        <div class="expanded-content" id="corps3-expand">
            <div class="level">
                <div class="unit-box">
                    <h2 class="text-md font-semibold">301st Armored Division</h2>
                    <button onclick="toggleExpand('division3-1-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division3-1-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">311th Heavy Armored Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">312th Light Armored Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">302nd Mechanized Division</h2>
                    <button onclick="toggleExpand('division3-2-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division3-2-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">321st Mechanized Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">322nd Recon Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="unit-box">
                    <h2 class="text-md font-semibold">303rd Armored Artillery Division</h2>
                    <button onclick="toggleExpand('division3-3-expand')">Expand Squadrons</button>
                    <div class="expanded-content" id="division3-3-expand">
                        <div class="level">
                            <div class="unit-box">
                                <h3 class="text-sm">331st Artillery Squadron</h3>
                            </div>
                            <div class="unit-box">
                                <h3 class="text-sm">332nd Rocket Artillery Squadron</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleExpand(sectionId) {
            var selectedContent = document.getElementById(sectionId);
            if (selectedContent.style.display === 'block') {
                selectedContent.style.display = 'none';
            } else {
                selectedContent.style.display = 'block';
            }
        }
    </script>
</body>
</html>
