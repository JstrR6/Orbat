<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@1.9.4"></script>
    <style>
        .hot-bar {
            transition: background-color 0.3s ease;
        }
        .hot-bar:hover {
            background-color: rgba(107, 114, 128, 0.3);
        }
        .unit-box {
            border: 2px solid #4a5568;
            border-radius: 8px;
            padding: 10px;
            margin: 10px;
            background-color: #ffffff;
        }
        .orbat-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .corps-container {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }
        .divisions, .squadrons {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Hot Bar -->
    <div class="fixed top-0 left-0 right-0 z-50">
        <div class="hot-bar flex justify-center items-center h-16 px-4">
            <div class="flex space-x-4">
                <a href="/rank-structure" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Rank Structure
                </a>
                <a href="/orbat" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    ORBAT
                </a>
                <a href="/forms" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Forms
                </a>
                <a href="/orders" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Orders By The General
                </a>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 pt-20">
        <h1 class="text-3xl font-bold mb-6 text-center">ORBAT Viewer</h1>
        
        <div class="orbat-container">
            <!-- 1st Army -->
            <div class="unit-box" id="<%= structure.id %>">
                <h2 class="text-lg font-semibold"><%= structure.name %></h2>
                <p class="text-sm"><%= structure.type %></p>
                <p class="text-xs">Commander: <%= leadership[structure.id]?.commander || 'Not assigned' %></p>
                <p class="text-xs">Deputy Commander: <%= leadership[structure.id]?.deputyCommander || 'Not assigned' %></p>
                <p class="text-xs">Senior Enlisted Leader: <%= leadership[structure.id]?.seniorEnlistedLeader || 'Not assigned' %></p>
                <button onclick="showLeadershipForm('<%= structure.id %>')" class="text-xs text-blue-500 hover:text-blue-700">Update Leadership</button>
            </div>

            <!-- Corps -->
            <div class="corps-container">
                <% structure.subordinates.forEach(corps => { %>
                    <div class="unit-box">
                        <h3 class="text-md font-semibold"><%= corps.name %></h3>
                        <p class="text-sm"><%= corps.type %></p>
                        <p class="text-xs">Commander: <%= leadership[corps.id]?.commander || 'Not assigned' %></p>
                        <p class="text-xs">Deputy Commander: <%= leadership[corps.id]?.deputyCommander || 'Not assigned' %></p>
                        <p class="text-xs">Senior Enlisted Leader: <%= leadership[corps.id]?.seniorEnlistedLeader || 'Not assigned' %></p>
                        <button onclick="showLeadershipForm('<%= corps.id %>')" class="text-xs text-blue-500 hover:text-blue-700">Update Leadership</button>
                        <button onclick="toggleDivisions('<%= corps.id %>')" class="mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded text-xs">
                            Expand Divisions
                        </button>

                        <!-- Divisions -->
                        <div id="divisions-<%= corps.id %>" class="divisions mt-4">
                            <% corps.subordinates.forEach(division => { %>
                                <div class="unit-box mt-2">
                                    <h4 class="text-sm font-semibold"><%= division.name %></h4>
                                    <p class="text-xs"><%= division.type %></p>
                                    <p class="text-xs">Commander: <%= leadership[division.id]?.commander || 'Not assigned' %></p>
                                    <p class="text-xs">Deputy Commander: <%= leadership[division.id]?.deputyCommander || 'Not assigned' %></p>
                                    <p class="text-xs">Senior Enlisted Leader: <%= leadership[division.id]?.seniorEnlistedLeader || 'Not assigned' %></p>
                                    <button onclick="showLeadershipForm('<%= division.id %>')" class="text-xs text-blue-500 hover:text-blue-700">Update Leadership</button>
                                    <button onclick="toggleSquadrons('<%= division.id %>')" class="mt-1 bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded text-xs">
                                        Expand Squadrons
                                    </button>

                                    <!-- Squadrons -->
                                    <div id="squadrons-<%= division.id %>" class="squadrons mt-2">
                                        <% division.subordinates.forEach(squadron => { %>
                                            <div class="unit-box mt-1">
                                                <h5 class="text-xs font-semibold"><%= squadron.name %></h5>
                                                <p class="text-xs"><%= squadron.type %></p>
                                                <p class="text-xs">Commander: <%= leadership[squadron.id]?.commander || 'Not assigned' %></p>
                                                <p class="text-xs">Deputy Commander: <%= leadership[squadron.id]?.deputyCommander || 'Not assigned' %></p>
                                                <p class="text-xs">Senior Enlisted Leader: <%= leadership[squadron.id]?.seniorEnlistedLeader || 'Not assigned' %></p>
                                                <button onclick="showLeadershipForm('<%= squadron.id %>')" class="text-xs text-blue-500 hover:text-blue-700">Update Leadership</button>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Leadership Update Form (Hidden by default) -->
        <div id="leadershipForm" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="display: none;">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3 text-center">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Update Leadership</h3>
                    <form id="updateLeadershipForm" hx-post="/api/update-leadership" hx-swap="none" class="mt-2">
                        <input type="hidden" id="formUnitId" name="unitId" value="">
                        <select name="position" class="mt-2 p-2 w-full border rounded">
                            <option value="commander">Commander</option>
                            <option value="deputyCommander">Deputy Commander</option>
                            <option value="seniorEnlistedLeader">Senior Enlisted Leader</option>
                        </select>
                        <input type="text" name="name" placeholder="New leader name" class="mt-2 p-2 w-full border rounded">
                        <button type="submit" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Update
                        </button>
                    </form>
                    <button onclick="hideLeadershipForm()" class="mt-4 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showLeadershipForm(unitId) {
            document.getElementById('formUnitId').value = unitId;
            document.getElementById('leadershipForm').style.display = 'block';
        }
    
        function hideLeadershipForm() {
            document.getElementById('leadershipForm').style.display = 'none';
        }
    
        function toggleDivisions(corpsId) {
            const divisionsElement = document.getElementById(`divisions-${corpsId}`);
            if (divisionsElement) {
                divisionsElement.style.display = divisionsElement.style.display === 'none' ? 'block' : 'none';
            }
        }
    
        function toggleSquadrons(divisionId) {
            const squadronsElement = document.getElementById(`squadrons-${divisionId}`);
            if (squadronsElement) {
                squadronsElement.style.display = squadronsElement.style.display === 'none' ? 'block' : 'none';
            }
        }
    
        document.body.addEventListener('htmx:afterRequest', function(event) {
            if (event.detail.successful) {
                alert('Leadership updated successfully');
                hideLeadershipForm();
                location.reload(); // Reload the page to reflect changes
            } else {
                alert('Failed to update leadership');
            }
        });
    </script>
</body>
</html>