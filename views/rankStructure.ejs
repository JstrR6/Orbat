<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .hot-bar {
            transition: background-color 0.3s ease;
        }
        .hot-bar:hover {
            background-color: rgba(107, 114, 128, 0.3);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Hot Bar -->
    <div class="fixed top-0 left-0 right-0 z-50">
        <div class="hot-bar flex justify-center items-center h-16 px-4">
            <div class="flex space-x-4">
                <a href="/rank-structure" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Rank Structure
                </a>
                <a href="/orbat" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    ORBAT
                </a>
                <a href="/forms" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Forms
                </a>
                <a href="/orders" class="text-black hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                    Orders By The General
                </a>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 pt-20">
        <h1 class="text-3xl font-bold mb-6">Rank Structure</h1>
        
        <% Object.entries(ranks).forEach(([category, categoryRanks]) => { %>
            <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-4"><%= category %></h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% categoryRanks.forEach(rank => { %>
                        <div class="bg-white shadow rounded-lg p-4">
                            <h3 class="text-xl font-semibold mb-2"><%= rank.name %></h3>
                            <p class="text-gray-600"><%= rank.description %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>