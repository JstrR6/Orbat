<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>US Military Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        /* Custom scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 8px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: #1f2937;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #4b5563;
            border-radius: 4px;
        }
    </style>
</head>
<body class="bg-gray-900 text-white">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 p-4">
            <h1 class="text-2xl font-bold mb-6 text-center">US Military Dashboard</h1>
            <nav>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700 bg-gray-700">
                    <i data-lucide="layout-dashboard" class="mr-2 h-4 w-4"></i>
                    Dashboard
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="users" class="mr-2 h-4 w-4"></i>
                    ORBAT
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="file-text" class="mr-2 h-4 w-4"></i>
                    Forms
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="user" class="mr-2 h-4 w-4"></i>
                    Profile
                </button>
                <button class="w-full flex items-center text-left px-4 py-2 mb-2 rounded hover:bg-gray-700">
                    <i data-lucide="settings" class="mr-2 h-4 w-4"></i>
                    Settings
                </button>
            </nav>
        </div>

        <!-- Main content -->
        <div class="flex-1 p-8 custom-scrollbar overflow-y-auto">
            <h2 class="text-3xl font-bold mb-6">Dashboard</h2>
            
            <!-- Orders Card -->
            <div class="bg-gray-800 border border-gray-700 rounded-lg mb-6">
                <div class="p-4 border-b border-gray-700">
                    <h3 class="flex items-center text-2xl font-bold">
                        <i data-lucide="bell" class="mr-2 h-6 w-6"></i>
                        Orders of the General
                    </h3>
                </div>
                <div class="p-4">
                    <div class="space-y-4">
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(function(order) { %>
                                <div class="bg-gray-700 border border-gray-600 rounded-lg">
                                    <div class="p-4 border-b border-gray-600">
                                        <h4 class="text-lg font-semibold"><%= order.name %></h4>
                                        <p class="text-sm text-gray-400">Created by: <%= order.createdBy %></p>
                                        <p class="text-sm text-gray-400">
                                            <%= new Date(order.createdAt).toLocaleString() %>
                                        </p>
                                    </div>
                                    <div class="p-4">
                                        <p class="text-gray-300"><%= order.content %></p>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-gray-400">No orders available.</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <% if (user.highestRole === 'High Command') { %>
                <!-- Add New Order Card (only for High Command) -->
                <div class="bg-gray-800 border border-gray-700 rounded-lg">
                    <div class="p-4 border-b border-gray-700">
                        <h3 class="flex items-center text-2xl font-bold">
                            <i data-lucide="plus" class="mr-2 h-6 w-6"></i>
                            Add New Order
                        </h3>
                    </div>
                    <div class="p-4">
                        <form action="/dashboard/add-order" method="POST" class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Order Name</label>
                                <input 
                                    type="text" 
                                    name="orderName" 
                                    required
                                    minlength="3"
                                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" 
                                    placeholder="Enter order name">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-1">Order Content</label>
                                <textarea 
                                    name="orderContent" 
                                    required
                                    minlength="10"
                                    rows="4" 
                                    class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" 
                                    placeholder="Enter order content"></textarea>
                            </div>
                            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded">
                                Add Order
                            </button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Handle tab switching
        document.querySelectorAll('nav button').forEach(button => {
            button.addEventListener('click', () => {
                // Remove active state from all buttons
                document.querySelectorAll('nav button').forEach(btn => {
                    btn.classList.remove('bg-gray-700');
                });
                // Add active state to clicked button
                button.classList.add('bg-gray-700');
            });
        });
    </script>
</body>
</html>
